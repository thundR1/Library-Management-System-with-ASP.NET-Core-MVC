<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LibraryMangementSystem</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/LibraryMangementSystem.styles.css" asp-append-version="true" />
</head>
<body>

    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" style="text-shadow: 1px 1px 2px #FF0000, -1px -1px 2px #0000FF;" asp-area="" asp-controller="Home" asp-action="Index">Scholarium</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1 justify-content-end align-items-center">
                        @if (User.Identity!.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark card-hover" style="border: none;" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                            @if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark card-hover" style="border: none;" asp-controller="Admin" asp-action="Dashboard">Admin Dashboard</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark card-hover" style="border: none;" asp-area="" asp-controller="Books" asp-action="Index">Manage Books</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark card-hover" style="border: none;" asp-area="" asp-controller="Loans" asp-action="Index">Manage Loans</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark card-hover" style="border: none;" asp-area="" asp-controller="Members" asp-action="Index">Manage Members</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark card-hover" style="border: none;" asp-area="" asp-controller="Authors" asp-action="Index">Manage Authors</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark card-hover" style="border: none;" asp-area="" asp-controller="Publishers" asp-action="Index">Manage Publishers</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark card-hover" style="border: none;" asp-area="" asp-controller="Categories" asp-action="Index">Manage Categories</a>
                                </li>
                            }
                            else if (User.IsInRole("Librarian"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark card-hover" style="border: none;" asp-area="" asp-controller="Books" asp-action="Index">Manage Books</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark card-hover" style="border: none;" asp-area="" asp-controller="Loans" asp-action="Index">Manage Loans</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark card-hover" style="border: none;" asp-area="" asp-controller="Members" asp-action="Index">Manage Members</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark card-hover" style="border: none;" asp-area="" asp-controller="Authors" asp-action="Index">Manage Authors</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark card-hover" style="border: none;" asp-area="" asp-controller="Publishers" asp-action="Index">Manage Publishers</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark card-hover" style="border: none;" asp-area="" asp-controller="Categories" asp-action="Index">Manage Categories</a>
                                </li>
                                
                            }
                            else
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark card-hover" style="border: none;" asp-area="" asp-controller="BooksMember" asp-action="Index">Borrow Books</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark card-hover" style="border: none;" asp-area="" asp-controller="MemberProfile" asp-action="Index">My Profile</a>
                                </li>

                            }
                            <li class="nav-item">
                                <form asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="form-inline">
                                    <button type="submit" class="btn btn-link nav-link text-dark card-hover" style="border: none;">Logout</button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark card-hover" style="border: none;" asp-controller="Account" asp-action="Login">Login</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark card-hover" style="border: none;" asp-controller="Account" asp-action="Register">Register</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="overlay">
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    </div>
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - Scholarium - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
