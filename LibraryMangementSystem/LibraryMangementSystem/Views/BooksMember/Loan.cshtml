@model LibraryMangementSystem.Models.Loan

@{
    ViewData["Title"] = "Loan";
}

<h1>Loan</h1>

<h4>Loan</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Loan">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
               <input type="hidden" asp-for="MemberID" value="@ViewBag.MemberID" />
            </div>
            
            <div class="form-group">
                <input type="hidden" asp-for="BookID" value="@ViewBag.BookID" />
            </div>
            <div class="form-group">
                <label asp-for="LoanDate" class="control-label"></label>
                <input asp-for="LoanDate" class="form-control"
                       min="@DateTime.Now.ToString("yyyy-MM-dd")"
                       max="@DateTime.Now.AddDays(31).ToString("yyyy-MM-dd")" />

                <span asp-validation-for="LoanDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LoanPeriod" class="control-label"></label>
                <select asp-for="LoanPeriod" class="form-control" >
                    <option value="7">7 days</option>
                    <option value="15">15 days</option>
                    <option value="30">30 days</option>
                </select>
            </div>
            
            <div class="form-group mt-2">
                <input type="submit" value="Borrow Book" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<br />
<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
