@model IEnumerable<LibraryMangementSystem.Models.Author>


<h1>Authors</h1>
<p>
    <a asp-action="Create" class="btn btn-dark">Add New</a>
</p>
<table class="table table-striped text-center">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
           
            <td>
                <a asp-action="Edit" asp-route-id="@item.AuthorID" class="btn btn-outline-primary btn-sm">Edit</a> 
                    <a asp-action="Details" asp-route-id="@item.AuthorID" class="btn btn-outline-primary btn-sm">Details</a> 
                    <a asp-action="Delete" asp-route-id="@item.AuthorID" class="btn btn-outline-primary btn-sm">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
